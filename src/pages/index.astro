    class="m-auto max-w-7xl p-4 container grid grid-cols-2 grid-rows-7 gap-3 md:grid-cols-3 md:grid-rows-5 md:gap-4 lg:grid-cols-4 lg:grid-rows-4 lg:gap-5">
    <Resume />
    <Linkedin />
    <ThemeSwitch />
    <Projects />
    <Weather />
    <Age />
    <Spotify />
    <Mail />
    <Photo />
    <Twitter />
    <Discord />
    <Github />
