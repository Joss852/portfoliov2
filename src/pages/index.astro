---
import Layout from '@layouts/Layout.astro'
import Resume from '@components/Resume.astro'
import ThemeSwitch from '@components/ThemeSwitch.astro'
import Mail from '@components/Mail.astro'
import Weather from '@components/Weather.astro'
import Age from '@components/Age.astro'
import Projects from '@components/Projects.astro'
import Spotify from '@components/Spotify.astro'
import Linkedin from '@components/Linkedin.astro'
