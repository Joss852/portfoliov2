---
import Card from './Card.astro'

const socialIcon = {
  src: '/assets/logos/twitter-logo-blue.svg',
  alt: 'Twitter Logo',
}
---

<Card
  class="md:order-9 lg:order-10 card-sm bg-card-light dark:bg-card-dark text-dark dark:text-white"
  socialIcon={socialIcon}
  externalLink>
  <img
    class="rounded-full w-10 h-10 sm:w-16 sm:h-16"
    src="/assets/images/avatars/twitter-avatar.jpg"
    alt="Twitter Avatar"
  />
  <h1 class="font-bold text-lg sm:text-3xl">Josseph M</h1>
  <span class="font-light text-xs sm:text-base mb-2">@jossm</span>
  <a
    href="https://twitter.com/JossephMorales1"
    class="bg-black dark:bg-white w-[70px] rounded-full flex items-center justify-center">
    <span class="font-bold text-xs sm:text-base text-white dark:text-black">Follow</span></a
  >
</Card>
